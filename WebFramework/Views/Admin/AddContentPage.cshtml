@{
    ViewBag.Title = "Add Content Page";
}

<script src="@Url.Content("~/Scripts/Validation.js")" type="text/javascript"></script>

<div align=center>
    <div class = "mainDiv">
        
        <fieldset style = "height: 600px">
            <legend>Add Content Page:</legend>
             <form name="addContent" action ="Create" onsubmit="return validateContent()" method="post">

                <table>
                <tr>
                    <td align="right" >Title:
                    </td>

                    <td> <input type="text" id="title" name ="Title" onclick="noBorderTitle()"/>
                    </td>
                </tr>

                <tr>
                    <td align="right"> Group:
                    </td>

                    <td> <input type="text" id="group" name ="Group" onclick="noBorderGroup()" />
                    </td>
                </tr>                

                <tr valign="top" >
                    <td align="right" > Content:
                    </td>

                    <td> <textarea rows ="23" cols="40" id="content" name ="Content" onclick ="noBorderContent()"></textarea>
                    </td>
                </tr>              

                <tr>
                    <td colspan="2" align="right"><input type="submit" value="Save Page" />
                    </td>
                </tr>               

                </table>  
                                             
             </form>
        </fieldset>
        
    </div>
</div>